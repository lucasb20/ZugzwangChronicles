<header>
    <h1 >Articles</h1>
    
    <p id="p_articles"> O site possui <%= Article.public_count %> artigos e contando. </p>
</header>

<main>
    <div class="artigos">
        <ul class="lista-artigos">
            <% @articles.each do |article| %>
            <li>
                <%= link_to article.title,article %>
            </li>
            <% end %>
        </ul>
    </div>
    
    <nav>
        <ul>
            <li class="but_navegar"><%= link_to "New Article", new_article_path %></li>
            <li class="but_navegar"><%= link_to "Back", root_path %></li>
        </ul>
    </nav>
</main>