<h2><%= @article.title %></h2>
<p>
    <%= @article.body %>
</p>

<h3><%= link_to "Edit", edit_article_path(@article) %></h3>
<h3><%= button_to 'Delete', article_path(@article), method: :delete, data: { confirm: 'Are you sure?' } %>
</h3>
<h3><%= link_to "Back", root_path %></h3>

<h2>Add a comment:</h2>
<%= form_with model: [ @article, @article.comments.build ] do |form| %>
  <p>
    <%= form.label :commenter %><br>
    <%= form.text_field :commenter %>
  </p>
  <p>
    <%= form.label :body %><br>
    <%= form.text_area :body %>
  </p>
  <p>
    <%= form.submit %>
  </p>
<% end %>

<h2>Comments</h2>
<% @article.comments.each do |comment| %>
  <p>
    <strong>Commenter:</strong>
    <%= comment.commenter %>
  </p>

  <p>
    <strong>Comment:</strong>
    <%= comment.body %>
  </p>
<% end %>